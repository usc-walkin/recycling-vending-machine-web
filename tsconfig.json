{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@@config": [
        "src/config/config" 
      ],
      "@@middlewares/*": [
        "src/middlewares/*" 
      ],
      "@@modules/*": [
        "src/modules/*" 
      ],
      "@@src/*": [
        "src/*"
      ],
    },
    "lib": [
      "es6",
      "es7"
    ],
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*/__temp"
  ],
}